                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txt_raquetaA"
                        style="@style/bandera1"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
