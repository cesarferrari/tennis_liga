<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".GaleriaFR">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/large3"
            android:layout_height="wrap_content"
            android:id="@+id/btn_listAdmin"
            android:text="list"
            app:cornerRadius="15dp"
            app:strokeColor="@color/admin_amarillo"
            android:layout_marginRight="@dimen/medium"
            android:onClick="onClick"/>
        <Button
            android:layout_width="@dimen/large3"
            android:layout_height="wrap_content"
            android:id="@+id/btn_gridAdmin"
            android:text="grid"
            app:cornerRadius="15dp"
            app:strokeColor="@color/admin_amarillo"
            android:onClick="onClick"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_estadisticas"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:enabled="false"
        android:onClick="onClick"
        android:text="estadisticas"
        android:textSize="12sp"
        app:cornerRadius="15dp"
        android:layout_marginLeft="@dimen/large"
        android:layout_marginRight="@dimen/large"
        app:strokeColor="@color/admin_amarillo" />
    <Button
        android:id="@+id/btn_jugador"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:enabled="false"
        android:onClick="onClick"
        android:text="datos generales"
        android:textSize="12sp"
        app:cornerRadius="15dp"
        android:layout_marginLeft="@dimen/large"
        android:layout_marginRight="@dimen/large"
        app:strokeColor="@color/admin_amarillo" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_id"/>

    <TextView
        android:id="@+id/txt_g1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="are you crazy" />


</LinearLayout>